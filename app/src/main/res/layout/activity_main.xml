<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c5cae9"
    tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_workpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#CCFFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="610dp">

                <TextView
                    android:id="@+id/title_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eventpersonal sökes"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/company_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EventProffsenDeluxe AB"
                    android:textStyle="italic"
                    android:textSize="15dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_work" />

                <TextView
                    android:id="@+id/shortinfo_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shortinfo_work"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_work" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2_workpage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#9499b7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shortinfo_work">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:id="@+id/demands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kvalifikationer"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:id="@+id/demands_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/demands_text"
                            android:textSize="10dp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/demands"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/about_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arbets beskrivning"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_view2_workpage" />

                <TextView
                    android:id="@+id/about_text_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_work"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_work" />

                <TextView
                    android:id="@+id/about_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info kring anställningen"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_text_work" />

                <TextView
                    android:id="@+id/about_text_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_company"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_company" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ansök"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>